<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainScreen" >

    <TextView
        android:id="@+id/main_opt_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/main_btn3"
        android:layout_width="90dip"
        android:layout_height="40dip"
        android:layout_alignBaseline="@+id/main_btn2"
        android:layout_alignBottom="@+id/main_btn2"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn"
        android:text="@string/map_btn" />

    <Button
        android:id="@+id/main_btn2"
        android:layout_width="90dip"
        android:layout_height="40dip"
        android:layout_alignBaseline="@+id/main_btn1"
        android:layout_alignBottom="@+id/main_btn1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn"
        android:text="@string/main_act_btn2" />

    <Button
        android:id="@+id/main_btn1"
        android:layout_width="90dip"
        android:layout_height="40dip"
        android:layout_alignLeft="@+id/main_opt_text_2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/btn"
        android:text="@string/exit_btn" />

    <Button
        android:id="@+id/main_btn4"
        android:layout_width="90dip"
        android:layout_height="40dip"
        android:layout_above="@+id/main_btn1"
        android:layout_alignLeft="@+id/main_btn1"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn"
        android:text="@string/form_subm_btn" />

    <ImageView
        android:id="@+id/main_imageView1"
        android:layout_width="240dip"
        android:layout_height="240dip"
        android:layout_alignLeft="@+id/opt_text_2"
        android:layout_below="@+id/opt_text_2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo2" />

    <Button
        android:id="@+id/qrcode"
        android:layout_width="90dip"
        android:layout_height="40dip"
        android:layout_alignLeft="@+id/main_btn3"
        android:layout_alignTop="@+id/main_btn4"
        android:background="@drawable/btn"
        android:text="@string/qr_btn" />

    <Button
        android:id="@+id/stream_btn"
        android:layout_width="90dip"
        android:layout_height="40dip"
        android:layout_alignBaseline="@+id/qrcode"
        android:layout_alignBottom="@+id/qrcode"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn"
        android:text="@string/stream_btn" />

</RelativeLayout>