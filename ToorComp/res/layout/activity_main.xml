<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="@drawable/main_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   
    tools:context=".MainScreen" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="90dip"
        android:layout_height="40dip"
        android:layout_alignBaseline="@+id/btn2"
        android:layout_alignBottom="@+id/btn2"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn"
        android:text="Χάρτης" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="90dip"
        android:layout_height="40dip"
        android:layout_alignBaseline="@+id/btn1"
        android:layout_alignBottom="@+id/btn1"
        android:layout_centerHorizontal="true"
         android:background="@drawable/btn"
        android:text="P O I S" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="90dip"
        android:layout_height="40dip"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
         android:background="@drawable/btn"
        android:text="Εξοδος" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="90dip"
        android:layout_height="40dip"
        android:layout_above="@+id/btn1"
        android:layout_alignLeft="@+id/btn1"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn"
        android:text="Υποβολή Αιτήματος" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="240dip"
        android:layout_height="240dip"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo2" />

    <Button
        android:id="@+id/qrcode"
        android:layout_width="90dip"
        android:layout_height="40dip"
        android:layout_alignLeft="@+id/btn3"
        android:layout_alignTop="@+id/btn4"
        android:background="@drawable/btn"
        android:text="QrCode" />

    <Button
        android:id="@+id/stream_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/qrcode"
        android:layout_alignBottom="@+id/qrcode"
        android:layout_centerHorizontal="true"
        android:text="Button" />

</RelativeLayout>